<form method="post" action="{{ path('user_comment_delete', {countryId: country.id, commentId: comment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="btn">Supprimer votre commentaire</button>
</form>